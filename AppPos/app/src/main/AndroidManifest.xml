<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pos.com.br.apppos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FuncionarioActivity"
            android:label="@string/title_activity_funcionario" >
        </activity>
        <activity
            android:name=".ClienteActivity"
            android:label="@string/title_activity_cliente" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".ListaFuncionarioActivity"
            android:label="@string/title_activity_lista_funcionario" >
        </activity>
        <activity
            android:name=".ListaClienteActivity"
            android:label="@string/title_activity_lista_cliente" >
        </activity>
    </application>

</manifest>
